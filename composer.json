{
    "name": "JTLSoftwareGmbH/onetimelink_api",
    "type": "project",
    "require": {
        "php": ">=7.1",
        "monolog/monolog": "~1.23",
        "symfony/console": "^3.4",
        "phpmailer/phpmailer": "~v6.0.0",
        "gabordemooij/redbean": "^5.1"
    },

    "require-dev": {
        "codeception/codeception": "^3.1",
        "phpunit/phpunit": "^6.0",
        "friendsofphp/php-cs-fixer": "^2.13"
    },

    "autoload": {
        "psr-4": {
            "JTL\\Onetimelink\\": "src/"
        }
    },

    "config": {
        "platform": {
            "php": "7.1"
        }
    },

    "scripts": {
        "phpcs": [
            "./php-cs-fixer fix --config=./.php_cs.dist"
        ],
        "phpcs-dry": [
            "./php-cs-fixer fix --config=./.php_cs.dist -v --dry-run"
        ]
    }
}
